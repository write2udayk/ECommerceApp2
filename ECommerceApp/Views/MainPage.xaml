<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ECommerceApp.ViewModels"
             x:Class="ECommerceApp.Views.MainPage"
             Title="E-Commerce Products">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cart"
                 Command="{Binding GoToCartCommand}"/>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,3*,2*"
          Padding="10"
          RowSpacing="10">

        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Search products..."
                   SearchCommand="{Binding SearchProductsCommand}"
                   SearchCommandParameter="{Binding Text, Source={RelativeSource Self}}"
                   TextChanged="SearchBar_TextChanged"/>
                
        <!-- Products List (60%) -->
            <Frame Grid.Row="1"
                   BorderColor="Gray"
                   CornerRadius="10">
            <CollectionView ItemsSource="{Binding Products}">
                <CollectionView.EmptyView>
                    <StackLayout>
                        <Label Text="No products yet!"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="Gray"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                                  Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductViewModel}}, Path=DeleteProductCommand}"
                                                  CommandParameter="{Binding .}"
                                                  BackgroundColor="Red"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <!-- Inside your CollectionView.ItemTemplate -->
                            <Frame Margin="5"
                                        Padding="10"
                                        BorderColor="LightGray"
                                        CornerRadius="5">
                                <Grid ColumnDefinitions="*,Auto">
                                    <!-- Title and Description -->
                                    <StackLayout>
                                        <Label Text="{Binding Title}"
                                                  FontAttributes="Bold"/>
                                        <Label Text="{Binding Description}"/>
                                        <Label Text="{Binding CreatedAt, StringFormat='{0:dd-MM-yyyy}'}"
                                                   TextColor="Gray"
                                                   FontSize="Small"/>
                                    </StackLayout>

                                    <!-- Price and Add to Cart -->
                                    <StackLayout Grid.Column="1"
                                                     Spacing="5">
                                        <Label Text="{Binding Price, StringFormat='${0:N2}'}"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="End"/>
                                        <Button Text="Add to Cart"
                                                   Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProductViewModel}}, Path=AddToCartCommand}"
                                                   CommandParameter="{Binding .}"
                                                   BackgroundColor="Purple"
                                                   TextColor="White"
                                                   HeightRequest="35"
                                                   WidthRequest="100"
                                                   FontSize="12"/>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>

        <!-- Add Product Form (40%) -->
        <VerticalStackLayout Grid.Row="2"
                            Padding="10"
                            Spacing="10">
            <Label Text="Add New Product"
                   FontAttributes="Bold"
                   FontSize="18"
                   HorizontalOptions="Center"/>

            <Entry Placeholder="Title"
                   Text="{Binding Title}"/>

            <Entry Placeholder="Description"
                   Text="{Binding Description}"/>

            <Entry Placeholder="Price"
                   Text="{Binding Price}"
                   Keyboard="Numeric"/>

            <Button Text="Save Product"
                    Command="{Binding AddProductCommand}"
                    BackgroundColor="Green"
                    TextColor="White"
                    HeightRequest="40"
                    Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>